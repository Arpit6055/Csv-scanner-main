<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shariuu- sharing is caring</title>
    <link rel="stylesheet" href="/css/index.css" />
  </head>

  <body>
    <img src="/img/logo.png" alt="Inshare logo" class="logo" />
    <img src="" alt="" srcset="" />
    <p class="lead mb-3" style="padding-top: 50px">Welcome <%= user.name %></p>
    <img class="profilePic" src="<%= user.profile_pic %>" alt="" srcset="" />
    <a href="/users/logout" class="btn btn-secondary logoutbtn">Logout</a>
    <a href="/editInfo" class="btn btn-secondary editbtn">Edit profile</a>
    <section class="upload-container">
      <form action="">
        <div class="drop-zone">
          <div class="icon-container">
            <img
              src="/img/file.svg"
              draggable="false"
              class="center"
              alt="File Icon"
            />
            <img
              src="/img/file.svg"
              draggable="false"
              class="left"
              alt="File Icon"
            />
            <img
              src="/img/file.svg"
              draggable="false"
              class="right"
              alt="File Icon"
            />
          </div>
          <input type="file" id="fileInput" />
          <div class="title">
            Drop your Files here or, <span id="browseBtn">browse</span>
            <div id="isFileDiv">
              <input
                type="checkbox"
                data-toggle="toggle"
                data-onstyle="success"
                data-offstyle="danger"
                data-size="large"
                id="isBook"
                name="status"
              />
              <label for="isBook">is this a book data file:</label>
            </div>
          </div>
        </div>
        <div>
          <div id="bookSearchBar">
            <button type="button" id="bookSearchBarBtn1">search</button>
            <input
              id="booksearchInput1"
              type="email"
              placeholder="Search by authors email.. "
            />
            <p style="min-width:30px;"></p>
            <input
              class="searchInput"
              id="booksearchInput2"
              type="text"
              placeholder="Search by book isbn.. "
            />
            <button type="button" id="bookSearchBarBtn2">search</button>
          </div>
          <div id="bookResults" class="drop-zone"></div>
        </div>
      </form>
      <div class="progress-container">
        <div class="bg-progress"></div>

        <div class="inner-container">
          <div class="status">Uploading...</div>
          <div class="percent-container">
            <span class="percentage" id="progressPercent">0</span>%
          </div>
          <div class="progress-bar"></div>
        </div>
      </div>
      <div class="sharing-container">
        <p class="expire">
          Share with your buddy ||
          <a class="expire" href="/dashboard">refresh page</a>
        </p>

        <div class="input-container">
          <input type="text" id="fileURL" readonly />
          <img
            src="/img/copy-icon.svg"
            id="copyURLBtn"
            alt="copy to clipboard icon"
          />
        </div>
      </div>
      <% if(file.length >= 1){ %>
      <table>
        <tr>
          <th>File Name</th>
          <th>Uploaded at</th>
          <th>Link</th>
        </tr>
        <% for(var i=0; i< file.length; i++) {%>
        <tr>
          <td><%= file[i].filename%></td>
          <td><%= file[i].createdAt%></td>
          <td>
            <a href="/files/read/<%= file[i].uuid%>" rel="noopener noreferrer"
              >Read</a
            >
            <a
              href="/files/<%= file[i].uuid%>"
              target="_blank"
              rel="noopener noreferrer"
              >Download</a
            >
            <a href="/files/delete/<%= file[i].uuid%>" rel="noopener noreferrer"
              >Delete</a
            >
          </td>
        </tr>
        <% } %>
      </table>
      <% } %>
    </section>
    <div class="image-vector"></div>
    <div class="toast">Sample message</div>
    <script src="/js/index.js"></script>
  </body>
</html>
